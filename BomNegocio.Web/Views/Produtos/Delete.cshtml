@model BomNegocio.Modelo.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<h2>Tem certeza que deseja excluir este produto?</h2>

<div class="card shadow-sm p-4">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ProdutoImagem" alt="@Model.Nome" class="img-fluid rounded" />
        </div>
        <div class="col-md-8">
            <h3>@Model.Nome</h3>
            <p><strong>Descrição:</strong> @Model.Descricao</p>
            <p><strong>Valor:</strong> R$ @Model.Preco.ToString("F2")</p>
            <p><strong>Categoria:</strong> @Model.Categoria?.Nome</p>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
