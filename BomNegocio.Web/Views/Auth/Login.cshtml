@model LoginUserViewModel
@{
    Layout = null;
    ViewData["Title"] = "Login - Bom Negócio";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(to right, #141E30, #243B55);
            color: #fff;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-box {
            background-color: #1f1f1f;
            padding: 2.5rem;
            border-radius: 1rem;
            box-shadow: 0 0 20px rgba(0,0,0,0.3);
            max-width: 400px;
            width: 100%;
        }
        .login-logo img {
            max-height: 80px;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="login-box text-center">
        <div class="login-logo">
            <img src="~/images/logo.png" alt="Bom Negócio" />
        </div>
        <h3 class="mb-4">Acessar o sistema</h3>

        <form asp-area="" asp-controller="Auth" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating mb-3 text-dark">
                <input type="email" class="form-control" id="email" name="Email" required>
                <label for="email">E-mail</label>
            </div>
            <div class="form-floating mb-3 text-dark">
                <input type="Password" class="form-control" id="Password" name="Password" required>
                <label for="Password">Senha</label>
            </div>
            <button type="submit" class="btn btn-primary w-100">Entrar</button>
        </form>

        <div class="mt-3">
            <a asp-controller="Auth" asp-action="Registrar" class="text-decoration-none text-white">Criar uma conta</a>
        </div>

        <p class="mt-4 small text-muted">© @DateTime.Now.Year - Bom Negócio</p>
    </div>
</body>
</html>
