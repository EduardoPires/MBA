@model RegisterUserViewModel
@{
    Layout = null;
    ViewData["Title"] = "Cadastro - Bom Negócio";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(to right, #141E30, #243B55);
            color: #fff;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .register-box {
            background-color: #1f1f1f;
            padding: 2.5rem;
            border-radius: 1rem;
            box-shadow: 0 0 20px rgba(0,0,0,0.3);
            max-width: 450px;
            width: 100%;
        }

        .register-logo img {
            max-height: 80px;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="register-box text-center">
        <div class="register-logo">
            <img src="~/images/logo.png" alt="Bom Negócio" />
        </div>
        <h3 class="mb-4">Criar conta</h3>

        <form asp-controller="Auth" asp-action="Registrar" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating mb-3 text-dark">
                <input asp-for="Email" class="form-control" required />
                <label asp-for="Email">E-mail</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 text-dark">
                <input asp-for="Password" class="form-control" type="password" required />
                <label asp-for="Password">Senha</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 text-dark">
                <input asp-for="ConfirmPassword" class="form-control" type="password" required />
                <label asp-for="ConfirmPassword">Confirmar Senha</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-start text-white small mb-3">
                <strong>Requisitos da senha:</strong>
                <ul class="mb-0">
                    <li>Mínimo de 6 caracteres</li>
                    <li>Ao menos uma letra maiúscula</li>
                    <li>Ao menos um número</li>
                    <li>Opcional: caractere especial @* (!@#$%) *@</li>
                </ul>
            </div>
            <button type="submit" class="btn btn-success w-100">Cadastrar</button>
        </form>

        <div class="mt-3">
            <a asp-controller="Auth" asp-action="Login" class="text-decoration-none text-white">Já tem uma conta? Entrar</a>
        </div>

        <p class="mt-4 small text-muted">© @DateTime.Now.Year - Bom Negócio</p>
    </div>
</body>
</html>
