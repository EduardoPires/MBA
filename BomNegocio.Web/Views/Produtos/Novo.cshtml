@model BomNegocio.Modelo.Produto
@{
    ViewData["Title"] = "Cadastrar Produto";
}

<h2>Cadastrar Produto</h2>

<form asp-action="Novo" enctype="multipart/form-data">

    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Descricao" class="form-label"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Estoque" class="form-label"></label>
        <input asp-for="Estoque" class="form-control" />
        <span asp-validation-for="Estoque" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Preco" class="form-label"></label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Imagem</label>
        <input type="file" name="imagemUpload" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="CategoriaId" class="form-label"></label>
        <select asp-for="CategoriaId" asp-items="ViewBag.CategoriaId" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

