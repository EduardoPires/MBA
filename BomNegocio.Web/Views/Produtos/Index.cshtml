@model IEnumerable<BomNegocio.Modelo.Produto>
@{
    ViewData["Title"] = "Produtos";
}

<h2 class="mb-4">Produtos</h2>

<p>
    <a asp-action="Novo" class="btn btn-primary">Cadastrar Novo Produto</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Imagem</th>
            <th>Nome</th>
            <th>Valor</th>
            <th>Categoria</th>
            <th>Vendedor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td><img src="@item.ProdutoImagem" style="height: 60px;" /></td>
            <td>@item.Nome</td>
            <td>R$ @item.Preco.ToString("F2")</td>
            <td>@item.Categoria.Nome</td>
            <td>@item.Vendedor.Nome</td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
